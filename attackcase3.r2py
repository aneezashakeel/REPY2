for fn in ("grow.txt", "grow.txt.a", "grow.txt.b"):
    if fn in listfiles():
        removefile(fn)

h = ABopenfile("grow.txt", True)
h.writeat("S", 0)
h.writeat("E", 1)
h.close()

h = ABopenfile("grow.txt", False)
h.writeat("LONGERDATAE", 0)
h.close()

h = ABopenfile("grow.txt", False)
